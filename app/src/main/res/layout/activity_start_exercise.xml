<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartExercise"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/toolbar_workout"
        android:layout_height="@dimen/toolbar"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/abc_vector_test"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="goBack"
            android:contentDescription="@string/back_text"/>

        <TextView
            android:id="@+id/workout_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:textStyle="bold"
            android:textSize="@dimen/header_text"/>

        <TextView
            android:id="@+id/profile_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_text"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/header_text"
            android:clickable="true"
            android:focusable="true"
            android:onClick="settings"/>

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="@dimen/header_text"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:clickable="true"
            android:contentDescription="@string/profile_text"
            android:focusable="true"
            android:onClick="settings"
            app:srcCompat="@drawable/setings_btn" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/normal_text"
        android:text="@string/current_ex"
        android:gravity="center_horizontal"
        android:layout_marginBottom="20dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp">

        <ImageView
            android:id="@+id/exercise1"
            android:layout_width="125dp"
            android:layout_height="125dp"
            app:srcCompat="@drawable/common_google_signin_btn_icon_light"
            android:contentDescription="Image"/>
        <TextView
            android:id="@+id/exercise1title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exercise_name_1"
            android:textSize="@dimen/normal_text"
            android:layout_toRightOf="@id/exercise1"
            android:layout_marginLeft="@dimen/header_text"/>
        <TextView
            android:id="@+id/reps1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/repetitions"
            android:layout_below="@id/exercise1title"
            android:layout_toRightOf="@id/exercise1"
            android:layout_marginLeft="@dimen/header_text"
            android:textSize="@dimen/header_text"/>
        <TextView
            android:id="@+id/sets1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sets"
            android:layout_below="@id/reps1"
            android:layout_toRightOf="@id/exercise1"
            android:layout_marginLeft="@dimen/header_text"
            android:textSize="@dimen/header_text"/>
        <TextView
            android:id="@+id/rest1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rest"
            android:layout_below="@id/sets1"
            android:layout_toRightOf="@id/exercise1"
            android:layout_marginLeft="@dimen/header_text"
            android:textSize="@dimen/header_text"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/timer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/timer"
            android:textSize="@dimen/header_text"/>
        <Chronometer
            android:id="@+id/chrono"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/timer_text"
            android:textSize="@dimen/header_text"/>
        <Button
            android:id="@+id/pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparency_white"
            android:layout_toRightOf="@id/timer_text"
            android:layout_marginLeft="@dimen/separation"
            android:layout_alignBaseline="@id/timer_text"
            android:text="@string/pause"
            android:textSize="@dimen/small_text"
            android:onClick="pauseTimer"
            android:paddingHorizontal="@dimen/separation"/>

        <Button
            android:id="@+id/finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparency_white"
            android:layout_below="@id/pause"
            android:layout_alignBaseline="@id/chrono"
            android:layout_alignLeft="@id/pause"
            android:text="@string/finish"
            android:onClick="finishTimer"
            android:paddingHorizontal="@dimen/separation"/>


    </RelativeLayout>

    <Button
        android:id="@+id/next_exercice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:paddingHorizontal="@dimen/separation"
        android:text="@string/next"
        android:background="@color/transparency_white"
        android:layout_marginBottom="30dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/top_margin">

        <ImageView
            android:id="@+id/exercise2"
            android:layout_width="125dp"
            android:layout_height="125dp"
            app:srcCompat="@drawable/common_google_signin_btn_icon_light"
            android:contentDescription="Image"/>
        <TextView
            android:id="@+id/exercise2title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exercise_name_2"
            android:textSize="@dimen/normal_text"
            android:layout_toRightOf="@id/exercise2"
            android:layout_marginLeft="@dimen/header_text"/>
        <TextView
            android:id="@+id/reps2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/repetitions"
            android:layout_below="@id/exercise2title"
            android:layout_toRightOf="@id/exercise2"
            android:layout_marginLeft="@dimen/header_text"
            android:textSize="@dimen/header_text"/>
        <TextView
            android:id="@+id/sets2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sets"
            android:layout_below="@id/reps2"
            android:layout_toRightOf="@id/exercise2"
            android:layout_marginLeft="@dimen/header_text"
            android:textSize="@dimen/header_text"/>
        <TextView
            android:id="@+id/rest2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rest"
            android:layout_below="@id/sets2"
            android:layout_toRightOf="@id/exercise2"
            android:layout_marginLeft="@dimen/header_text"
            android:textSize="@dimen/header_text"/>
    </RelativeLayout>

</LinearLayout>