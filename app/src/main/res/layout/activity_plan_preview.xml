<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".PlanPreview">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/toolbar_workout"
        android:layout_height="@dimen/toolbar"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/abc_vector_test"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="goBack"
            android:contentDescription="@string/back_text"/>

        <TextView
            android:id="@+id/workout_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:textStyle="bold"
            android:textSize="@dimen/header_text"/>

        <TextView
            android:id="@+id/profile_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_text"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/header_text"
            android:clickable="true"
            android:focusable="true"
            android:onClick="goProfile"/>

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="@dimen/header_text"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:srcCompat="@drawable/common_google_signin_btn_icon_disabled"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/profile_text"
            android:onClick="goProfile"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/start"
        android:layout_below="@id/toolbar_workout"
        android:layout_marginTop="-55dp"
        android:layout_marginBottom="62dp"
        android:paddingHorizontal="@dimen/side_margin"
        android:paddingTop="@dimen/top_margin"
        android:paddingBottom="@dimen/top_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/top_margin">

                <ImageView
                    android:id="@+id/exercise1"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:contentDescription="Image"
                    android:onClick="showLink"
                    app:srcCompat="@drawable/common_google_signin_btn_icon_light" />

                <TextView
                    android:id="@+id/exercise1title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/header_text"
                    android:layout_toRightOf="@id/exercise1"
                    android:text="@string/exercise_name_1"
                    android:textSize="@dimen/normal_text" />

                <TextView
                    android:id="@+id/reps1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/exercise1title"
                    android:layout_marginLeft="@dimen/header_text"
                    android:layout_toRightOf="@id/exercise1"
                    android:text="@string/repetitions"
                    android:textSize="@dimen/header_text" />

                <TextView
                    android:id="@+id/sets1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/reps1"
                    android:layout_marginLeft="@dimen/header_text"
                    android:layout_toRightOf="@id/exercise1"
                    android:text="@string/sets"
                    android:textSize="@dimen/header_text" />

                <TextView
                    android:id="@+id/rest1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sets1"
                    android:layout_marginLeft="@dimen/header_text"
                    android:layout_toRightOf="@id/exercise1"
                    android:text="@string/rest"
                    android:textSize="@dimen/header_text" />
            </RelativeLayout> <!-- Exercise 1 -->

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/top_margin">

                <ImageView
                    android:id="@+id/exercise2"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:contentDescription="Image"
                    android:onClick="showLink"
                    app:srcCompat="@drawable/common_google_signin_btn_icon_light" />

                <TextView
                    android:id="@+id/exercise2title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/header_text"
                    android:layout_toRightOf="@id/exercise2"
                    android:text="@string/exercise_name_2"
                    android:textSize="@dimen/normal_text" />

                <TextView
                    android:id="@+id/reps2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/exercise2title"
                    android:layout_marginLeft="@dimen/header_text"
                    android:layout_toRightOf="@id/exercise2"
                    android:text="@string/repetitions"
                    android:textSize="@dimen/header_text" />

                <TextView
                    android:id="@+id/sets2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/reps2"
                    android:layout_marginLeft="@dimen/header_text"
                    android:layout_toRightOf="@id/exercise2"
                    android:text="@string/sets"
                    android:textSize="@dimen/header_text" />

                <TextView
                    android:id="@+id/rest2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sets2"
                    android:layout_marginLeft="@dimen/header_text"
                    android:layout_toRightOf="@id/exercise2"
                    android:text="@string/rest"
                    android:textSize="@dimen/header_text" />
            </RelativeLayout> <!-- Exercise 2 -->

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/top_margin">

                <ImageView
                    android:id="@+id/exercise3"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:contentDescription="Image"
                    android:onClick="showLink"
                    app:srcCompat="@drawable/common_google_signin_btn_icon_light" />

                <TextView
                    android:id="@+id/exercise3title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/header_text"
                    android:layout_toRightOf="@id/exercise3"
                    android:text="@string/exercise_name_3"
                    android:textSize="@dimen/normal_text" />

                <TextView
                    android:id="@+id/reps3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/exercise3title"
                    android:layout_marginLeft="@dimen/header_text"
                    android:layout_toRightOf="@id/exercise3"
                    android:text="@string/repetitions"
                    android:textSize="@dimen/header_text" />

                <TextView
                    android:id="@+id/sets3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/reps3"
                    android:layout_marginLeft="@dimen/header_text"
                    android:layout_toRightOf="@id/exercise3"
                    android:text="@string/sets"
                    android:textSize="@dimen/header_text" />

                <TextView
                    android:id="@+id/rest3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sets3"
                    android:layout_marginLeft="@dimen/header_text"
                    android:layout_toRightOf="@id/exercise3"
                    android:text="@string/rest"
                    android:textSize="@dimen/header_text" />
            </RelativeLayout> <!-- Exercise 3 -->

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/top_margin">

                <ImageView
                    android:id="@+id/exercise4"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:contentDescription="Image"
                    android:onClick="showLink"
                    app:srcCompat="@drawable/common_google_signin_btn_icon_light" />

                <TextView
                    android:id="@+id/exercise4title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/header_text"
                    android:layout_toRightOf="@id/exercise4"
                    android:text="@string/exercise_name_2"
                    android:textSize="@dimen/normal_text" />

                <TextView
                    android:id="@+id/reps4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/exercise4title"
                    android:layout_marginLeft="@dimen/header_text"
                    android:layout_toRightOf="@id/exercise4"
                    android:text="@string/repetitions"
                    android:textSize="@dimen/header_text" />

                <TextView
                    android:id="@+id/sets4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/reps4"
                    android:layout_marginLeft="@dimen/header_text"
                    android:layout_toRightOf="@id/exercise4"
                    android:text="@string/sets"
                    android:textSize="@dimen/header_text" />

                <TextView
                    android:id="@+id/rest4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sets4"
                    android:layout_marginLeft="@dimen/header_text"
                    android:layout_toRightOf="@id/exercise4"
                    android:text="@string/rest"
                    android:textSize="@dimen/header_text" />
            </RelativeLayout> <!-- Exercise 4 -->
        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:paddingHorizontal="@dimen/side_margin"
        android:id="@+id/start"
        android:layout_height="wrap_content"
        android:background="@color/transparency_white"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/toolbar"
        android:text="@string/start_text"
        android:textSize="@dimen/header_text"
        android:layout_centerHorizontal="true"
        android:onClick="startExercise"/>

</RelativeLayout>