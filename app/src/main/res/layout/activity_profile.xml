<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".UI.Profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/toolbar_workout"
        android:layout_height="@dimen/toolbar"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/back_text"
            android:onClick="goBack"
            app:srcCompat="@drawable/abc_vector_test" />

        <TextView
            android:id="@+id/create_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:text="@string/profile_title"
            android:textSize="@dimen/header_text"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/profile_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_text"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/header_text"
            android:clickable="true"
            android:focusable="true"
            android:onClick="settings"/>

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="@dimen/header_text"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:clickable="true"
            android:contentDescription="@string/profile_text"
            android:focusable="true"
            android:onClick="settings"
            app:srcCompat="@drawable/setings_btn" />

    </LinearLayout>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/personal_info_title"
        android:textSize="@dimen/normal_text"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/margin2"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/toolbar_workout"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/updates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/btn">

            <TextView
                android:id="@+id/height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/height"
                android:textSize="@dimen/normal_text"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/margin2"/>

            <EditText
                android:id="@+id/email"
                android:textColor="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="@dimen/textbox_height"
                android:hint="@string/height"
                android:textColorHint="@color/colorWhite"
                android:paddingHorizontal="@dimen/new_margin"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/new_margin"
                android:inputType="numberDecimal"
                />

            <TextView
                android:id="@+id/weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/weight"
                android:textSize="@dimen/normal_text"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/margin2"/>
            <EditText
                android:textColorHint="@color/colorWhite"
                android:id="@+id/fullname"
                android:textColor="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="@dimen/textbox_height"
                android:hint="@string/weight"
                android:textStyle="bold"
                android:paddingHorizontal="@dimen/new_margin"
                android:layout_marginBottom="@dimen/new_margin"
                android:inputType="numberDecimal"
                />

            <TextView
                android:id="@+id/stepGoal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/birth"
                android:textSize="@dimen/normal_text"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/margin2"/>
            <EditText
                android:textColorHint="@color/colorWhite"
                android:id="@+id/maxSteps"
                android:textColor="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="@dimen/textbox_height"
                android:hint="@string/birth"
                android:textStyle="bold"
                android:paddingHorizontal="@dimen/new_margin"
                android:layout_marginBottom="@dimen/new_margin"
                android:inputType="numberDecimal"
                />

            <RadioGroup
                android:id="@+id/dietas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/new_margin">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@android:style/Widget.DeviceDefault.Light.CompoundButton.RadioButton"
                    android:text="@string/dieta_normal"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/small_text"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@android:style/Widget.DeviceDefault.Light.CompoundButton.RadioButton"
                    android:text="@string/dieta_veggie"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/small_text"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@android:style/Widget.DeviceDefault.Light.CompoundButton.RadioButton"
                    android:text="@string/dieta_vegan"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/small_text"/>
            </RadioGroup>
            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?android:attr/borderlessButtonStyle"
                android:background="@drawable/button_shape"
                android:textSize="@dimen/header_text"
                android:text="@string/save"
                android:layout_marginBottom="@dimen/top_margin"
                android:onClick="save"/>
